<% if (post.link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" href="<%- post.link %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index){ %>
    <h2>
      <a href="<%- config.root %><%- post.path %>"><%= post.title %></a>
    </h2>
  <% } else { %>
    <h2>
      <%= post.title %>
    </h2>
  <% } %>
<% } %>
